<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightblack"
    android:gravity="center"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"

        >
        <ImageView   android:layout_width="220dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S      A      T      Y      A"
            android:textColor="@color/liteblack"
            android:textStyle="bold"
            android:id="@+id/title"
            android:fontFamily="monospace"
            android:gravity="center"
            >

        </TextView>
        <View
            android:layout_width="260sp"
            android:layout_height="1dp"
            android:layout_marginTop="10sp"
            android:background="@color/liteblack"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fashion"
                android:layout_marginRight="10sp"
                android:textColor="@color/liteblack"></TextView>
            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/dot"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Design"
                android:layout_margin="10sp"
                android:textColor="@color/liteblack"></TextView>
            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/dot"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clothes"
                android:layout_marginLeft="10sp"
                android:textColor="@color/liteblack"></TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>